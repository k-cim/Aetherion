{
  "schema": 1,
  "id": "aetherionLight",
  "name": "Aetherion Clair",
  "meta": { "author": "Aetherion", "createdAt": "2025-09-07T00:00:00Z" },

  "background": {
    "style": "solid",
    "color": "#FFFFFFFF",
    "gradient": {
      "startColor": "#000000",
      "endColor":   "#000000",
      "startOpacity": 0.08,
      "endOpacity":   0.02,
      "startPoint": "leading",
      "endPoint": "trailing"
    }
  },

  "cards": {
    "startColor": "#000000",
    "endColor":   "#000000",
    "startOpacity": 0.08,
    "endOpacity":   0.02,
    "cornerRadius": 16,
    "strokeOpacity": 0.06
  },

  "text": {
    "header":   { "color": "#000000FF",            "size": 28, "weight": "bold",     "design": "rounded" },
    "title":    { "color": "#000000FF",            "size": 20, "weight": "semibold", "design": "default" },
    "body":     { "color": "#000000FF",            "size": 16, "weight": "regular",  "design": "default" },
    "secondary":{ "color": "rgba(0,0,0,0.70)",     "size": 14, "weight": "regular",  "design": "default" }
  },

  "icons": {
    "color": "#000000D9",
    "selectedOpacity": 1.00,
    "unselectedOpacity": 0.40
  },

  "controls": {
    "tint": "#000000D9",
    "slider":  { "thumb": "#000000FF", "track": "rgba(0,0,0,0.20)" },
    "toggle":  { "on":   "#000000D9",  "off":   "rgba(0,0,0,0.25)" },
    "radio":   { "fill": "#000000D9",  "stroke":"rgba(0,0,0,0.25)" },
    "progress":{ "track":"rgba(0,0,0,0.15)", "fill": "#000000D9" }
  },

  "bottombar": { "backgroundOpacity": 0.18 }
}
